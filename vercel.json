{
    "version": 2,
    "builds": [
      {
        "src": "front/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"  // Directorio de salida generado por Vite
        }
      },
      {
        "src": "app.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/app.js"  // Redirige todas las rutas API a `app.js`
      },
      {
        "src": "/(.*)",
        "dest": "/dist/$1"  // Redirige todas las demás solicitudes a archivos estáticos en `dist`
      }
    ]
  }
  